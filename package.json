{
  "name": "radio-id3",
  "version": "1.0.0",
  "description": "A simple library to get metadata from icecast/shoutcast streams",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w1lliams/radio-id3.git"
  },
  "keywords": [
    "shoutcast",
    "icecast",
    "ID3",
    "metadata",
    "song",
    "typescript"
  ],
  "author": "w1lliams <melnichuk.lm@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/w1lliams/radio-id3/issues"
  },
  "homepage": "https://github.com/w1lliams/radio-id3#readme",
  "devDependencies": {
    "@types/got": "^9.6.7",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "jest": "^24.9.0",
    "nock": "^11.4.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "csvtojson": "^2.0.10",
    "fast-xml-parser": "^3.13.0",
    "got": "^9.6.0",
    "lodash": "^4.17.15"
  }
}
